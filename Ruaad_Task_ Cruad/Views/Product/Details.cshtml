@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>

<div>
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 300px;" />
    <p>@Model.Description</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
</div>

<a asp-controller="Product" asp-action="Index" >Back to Product List</a>
